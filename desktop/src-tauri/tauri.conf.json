{
  "productName": "Ageis Agent",
  "version": "0.1.0",
  "identifier": "dev.ageis.desktop",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ageis Agent",
        "width": 960,
        "height": 720,
        "minWidth": 640,
        "minHeight": 480,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:8000 http://localhost:8000; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "capabilities": [
        "sidecar"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/ageis-agent"
    ]
  }
}